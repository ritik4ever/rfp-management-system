# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rfp_management
DB_USER=postgres
DB_PASSWORD=your_postgres_password_here

# OpenAI Configuration
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# Email Configuration (SMTP for sending)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=YOUR_EMAIL_HERE@gmail.com
SMTP_PASSWORD=YOUR_16_CHAR_APP_PASSWORD_HERE

# Email Configuration (IMAP for receiving)
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_USER=YOUR_EMAIL_HERE@gmail.com
IMAP_PASSWORD=YOUR_16_CHAR_APP_PASSWORD_HERE
IMAP_TLS=true

# Application Configuration
APP_EMAIL=YOUR_EMAIL_HERE@gmail.com
FRONTEND_URL=http://localhost:3000

# ==============================================================================
# INSTRUCTIONS TO COMPLETE:
# ==============================================================================
#
# Replace the following:
#
# 1. YOUR_EMAIL_HERE@gmail.com (3 places)
#    → Your actual Gmail address (e.g., john.doe@gmail.com)
#
# 2. YOUR_16_CHAR_APP_PASSWORD_HERE (2 places)
#    → Your Gmail app password (16 characters, NO SPACES)
#    → Example format: abcdefghijklmnop
#    → Get it from: https://myaccount.google.com/apppasswords
#
# ==============================================================================
# EXAMPLE (DO NOT USE THESE VALUES):
# ==============================================================================
# SMTP_USER=john.doe@gmail.com
# SMTP_PASSWORD=abcdefghijklmnop
# IMAP_USER=john.doe@gmail.com
# IMAP_PASSWORD=abcdefghijklmnop
# APP_EMAIL=john.doe@gmail.com
# ==============================================================================
